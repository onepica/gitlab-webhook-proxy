<div class="form-group">
  <h1>Projects</h1>
  <p>Projects list according to access of by your account.</p>
</div>
<div class="container">
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Configured</th>
      <th>Extra</th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <a href="/app/project/config/<%= project.id %>">
            <%= project.name %>
          </a>
        </td>
        <td>
          <% if project_has_config project then %>
            <div class="glyphicon glyphicon-ok"></div>
          <% end %>
        </td>
        <td>
          <a href="<%= project.web_url %>">
            Home page
          </a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
